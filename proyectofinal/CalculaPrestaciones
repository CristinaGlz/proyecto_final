using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace Prestaciones
{
    public class CalculaPrestaciones
    {
        public float SalarioSemanal(float s)
        {
            return s * 7;
        }
        public float SalarioQuincenal(float s)
        {
            return s * 15;
        }
        public float SalarioSemanal(float s)
        {
            return s * 30;
        }
        public float Aguinaldo(int anios, float s)
        {
            if (anios >= 1)
                return s * 15;
            else
                return (0.0);
        }
        public float Primavacacional(float s)
        {
            return (s * 6) * .25;
        }
    }
}
